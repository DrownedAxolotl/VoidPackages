wrksrc=.
#create_wrksrc=yes
#build_style=gnu-configure
#configure_args=""
#make_build_args=""
#make_install_args=""
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
depends="fontconfig libXtst gtk+3 python3 cairo alsa-lib nss libgcc libnotify libXScrnSaver"
